<h2>Records</h2>

<h4>Search by actor:</h4>

<%= form_tag(records_index_url, method: :get) do %>
  <%= text_field_tag(:actor, params[:actor]) %>
  <%= submit_tag('Search') %>
<% end %>

<table style="width: 100%">
  <tr>
    <th>Number</th>
    <th>Court</th>
    <th>Actor</th>
    <th>Defendant</th>
    <th>Summary</th>
    <th>Notifications</th>
  </tr>
  <% @records.each do |record| %>
    <tr>
      <td><%= record.number %></td>
      <td><%= record.court %></td>
      <td><%= record.actor %></td>
      <td><%= record.defendant %></td>
      <td><%= record.summary %></td>
      <td><%= record.notifications.size %></td>
    </tr>
  <% end %>
  <% if @records.empty? %>
    <tr>
      <td colspan="6">No results were obtained.</td>
    </tr>
  <% end %>
</table>
